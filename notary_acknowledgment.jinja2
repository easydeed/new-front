{# 
  CALIFORNIA ALL-PURPOSE ACKNOWLEDGMENT
  California Civil Code § 1189 Compliant
  
  Include this partial in deed templates with:
  {% include '_partials/notary_acknowledgment.jinja2' %}
  
  Required variables:
  - county: string (property county)
  - grantors_text: string (signer names)
  - document_title: string (e.g., "Grant Deed")
  - execution_date: string (optional, for optional section)
  - page_count: int (optional, for optional section)
#}

<style>
/* ==========================================================================
   NOTARY ACKNOWLEDGMENT STYLES - California Civil Code § 1189
   ========================================================================== */

.notary-page {
    page-break-before: always;
    padding: 0.75in;
    font-family: "Times New Roman", Times, serif;
    font-size: 11pt;
    line-height: 1.5;
    color: #000;
}

/* Required Disclaimer Box - CC § 1189 */
.notary-disclaimer {
    border: 2px solid #000;
    padding: 12px 16px;
    margin-bottom: 0.4in;
    font-size: 10pt;
    line-height: 1.4;
    text-align: justify;
}

/* Title */
.notary-main-title {
    text-align: center;
    font-size: 14pt;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 4px;
}

.notary-subtitle {
    text-align: center;
    font-size: 10pt;
    color: #444;
    margin-bottom: 0.35in;
}

/* Venue Block */
.notary-venue {
    margin-bottom: 0.3in;
}

.notary-venue-row {
    display: flex;
    align-items: baseline;
    margin-bottom: 2px;
}

.notary-venue-label {
    width: 2in;
}

.notary-venue-bracket {
    width: 0.25in;
    text-align: center;
}

.notary-venue-ss {
    font-size: 9pt;
    margin-left: 0.1in;
}

.notary-county-value {
    border-bottom: 1px solid #000;
    min-width: 2in;
    display: inline-block;
    padding-left: 4px;
}

/* Body Paragraphs */
.notary-body {
    text-align: justify;
    margin-bottom: 0.25in;
}

.notary-body p {
    margin-bottom: 0.2in;
}

.notary-field {
    border-bottom: 1px solid #000;
    min-width: 1.5in;
    display: inline-block;
    padding: 0 4px;
}

.notary-field.short {
    min-width: 1in;
}

.notary-field.long {
    min-width: 3in;
}

.notary-field.extra-long {
    min-width: 4in;
}

/* Certification */
.notary-certification {
    font-weight: bold;
    margin-bottom: 0.3in;
    text-align: justify;
}

.notary-witness {
    margin-bottom: 0.4in;
}

/* Signature Section */
.notary-signature-section {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.4in;
}

.notary-signature-block {
    width: 3.5in;
}

.notary-signature-line {
    border-bottom: 1px solid #000;
    width: 3in;
    height: 0.5in;
    margin-bottom: 4px;
}

.notary-signature-label {
    font-size: 10pt;
    margin-bottom: 0.2in;
}

.notary-print-name {
    font-size: 10pt;
    margin-bottom: 0.15in;
}

.notary-commission {
    font-size: 10pt;
}

/* Seal Area */
.notary-seal-area {
    border: 2px solid #000;
    width: 2.25in;
    height: 2.25in;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex-shrink: 0;
}

.notary-seal-label {
    font-size: 10pt;
    font-weight: bold;
    text-transform: uppercase;
    color: #666;
    line-height: 1.3;
}

/* Divider */
.notary-divider {
    border-top: 1px dashed #999;
    margin: 0.3in 0;
}

/* Optional Section */
.notary-optional-section {
    margin-top: 0.3in;
}

.notary-optional-header {
    font-size: 10pt;
    font-weight: bold;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 0.15in;
    color: #444;
}

.notary-optional-note {
    font-size: 9pt;
    text-align: center;
    color: #666;
    font-style: italic;
    margin-bottom: 0.2in;
}

.notary-optional-row {
    display: flex;
    margin-bottom: 0.15in;
    font-size: 10pt;
}

.notary-optional-label {
    width: 2in;
    flex-shrink: 0;
}

.notary-optional-value {
    border-bottom: 1px solid #000;
    flex-grow: 1;
    padding-left: 4px;
    min-height: 1.1em;
}

/* QR Code Placeholder (for Phase 4) */
.notary-qr-section {
    margin-top: 0.4in;
    padding-top: 0.2in;
    border-top: 1px solid #ccc;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.notary-qr-code {
    width: 1in;
    height: 1in;
    border: 1px solid #ddd;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 8pt;
    color: #999;
}

.notary-qr-text {
    font-size: 8pt;
    color: #666;
    max-width: 4in;
}

.notary-doc-id {
    font-family: monospace;
    font-size: 9pt;
    color: #333;
}
</style>

<!-- ========================================================================
     NOTARY ACKNOWLEDGMENT PAGE - California Civil Code § 1189
     ======================================================================== -->

<div class="notary-page">

    <!-- REQUIRED DISCLAIMER BOX - Civil Code § 1189 -->
    <div class="notary-disclaimer">
        A notary public or other officer completing this certificate verifies only the identity 
        of the individual who signed the document to which this certificate is attached, and not 
        the truthfulness, accuracy, or validity of that document.
    </div>

    <!-- TITLE -->
    <div class="notary-main-title">California All-Purpose Acknowledgment</div>
    <div class="notary-subtitle">Civil Code § 1189</div>

    <!-- VENUE -->
    <div class="notary-venue">
        <div class="notary-venue-row">
            <span class="notary-venue-label">State of California</span>
            <span class="notary-venue-bracket">)</span>
        </div>
        <div class="notary-venue-row">
            <span class="notary-venue-label"></span>
            <span class="notary-venue-bracket">)</span>
            <span class="notary-venue-ss">ss.</span>
        </div>
        <div class="notary-venue-row">
            <span class="notary-venue-label">County of <span class="notary-county-value">{{ county or '' }}</span></span>
            <span class="notary-venue-bracket">)</span>
        </div>
    </div>

    <!-- ACKNOWLEDGMENT BODY -->
    <div class="notary-body">
        <p>
            On <span class="notary-field short">____________________</span> before me, 
            <span class="notary-field long">________________________________________</span>, 
            a Notary Public, personally appeared 
            <span class="notary-field extra-long">{{ grantors_text or '____________________________________________' }}</span>,
        </p>
        <p>
            who proved to me on the basis of satisfactory evidence to be the person(s) whose name(s) 
            is/are subscribed to the within instrument and acknowledged to me that he/she/they executed 
            the same in his/her/their authorized capacity(ies), and that by his/her/their signature(s) 
            on the instrument the person(s), or the entity upon behalf of which the person(s) acted, 
            executed the instrument.
        </p>
    </div>

    <!-- CERTIFICATION -->
    <div class="notary-certification">
        I certify under PENALTY OF PERJURY under the laws of the State of California 
        that the foregoing paragraph is true and correct.
    </div>

    <!-- WITNESS -->
    <div class="notary-witness">
        WITNESS my hand and official seal.
    </div>

    <!-- SIGNATURE AND SEAL -->
    <div class="notary-signature-section">
        <div class="notary-signature-block">
            <div class="notary-signature-line"></div>
            <div class="notary-signature-label">Signature of Notary Public</div>
            
            <div class="notary-print-name">
                Name (Printed): <span class="notary-field">__________________________</span>
            </div>
            
            <div class="notary-commission">
                My Commission Expires: <span class="notary-field short">________________</span>
            </div>
        </div>

        <div class="notary-seal-area">
            <span class="notary-seal-label">Place Notary Seal<br>Above</span>
        </div>
    </div>

    <!-- DIVIDER -->
    <div class="notary-divider"></div>

    <!-- OPTIONAL SECTION -->
    <div class="notary-optional-section">
        <div class="notary-optional-header">Optional Section</div>
        <div class="notary-optional-note">
            (Completing this information can deter alteration of the document)
        </div>

        <div class="notary-optional-row">
            <span class="notary-optional-label">Title or Type of Document:</span>
            <span class="notary-optional-value">{{ document_title or '' }}</span>
        </div>

        <div class="notary-optional-row">
            <span class="notary-optional-label">Document Date:</span>
            <span class="notary-optional-value">{{ execution_date or '' }}</span>
        </div>

        <div class="notary-optional-row">
            <span class="notary-optional-label">Number of Pages:</span>
            <span class="notary-optional-value">{{ page_count or '' }}</span>
        </div>

        <div class="notary-optional-row">
            <span class="notary-optional-label">Signer(s) Other Than Named Above:</span>
            <span class="notary-optional-value"></span>
        </div>
    </div>

    {% if document_id %}
    <!-- QR VERIFICATION SECTION (Phase 4) -->
    <div class="notary-qr-section">
        <div class="notary-qr-text">
            <strong>Document Verification</strong><br>
            Verify this document at: verify.deedpro.com<br>
            <span class="notary-doc-id">ID: {{ document_id }}</span>
        </div>
        <div class="notary-qr-code">
            {% if qr_code_data %}
            <img src="{{ qr_code_data }}" alt="QR Code" style="width: 100%; height: 100%;">
            {% else %}
            [QR]
            {% endif %}
        </div>
    </div>
    {% endif %}

</div>
