{# Recording box + Mail-To + Order Info (APN is from Step 1/2) #}
<div style="margin-top: 24pt; position: relative;">

  <div class="recording-box">
    <div><strong>RECORDING REQUESTED BY:</strong></div>
    <div style="margin-bottom: 6pt;">{{ requested_by or title_company or "" }}</div>
    
    <div><strong>AND WHEN RECORDED MAIL TO:</strong></div>

    {% if return_to and (return_to.name or return_to.company or return_to.address1) %}
      {% if return_to.name %}<div>{{ return_to.name }}</div>{% endif %}
      {% if return_to.company %}<div>{{ return_to.company }}</div>{% endif %}
      {% if return_to.address1 %}<div>{{ return_to.address1 }}</div>{% endif %}
      {% if return_to.address2 %}<div>{{ return_to.address2 }}</div>{% endif %}
      <div>
        {{ return_to.city or "" }}{% if return_to.city and (return_to.state or return_to.zip) %}, {% endif %}
        {{ return_to.state or "" }} {{ return_to.zip or "" }}
      </div>
    {% else %}
      <div>____________________________</div>
      <div>____________________________</div>
      <div>____________________________</div>
      <div>____________________________</div>
    {% endif %}
  </div>

  <div class="order-info">
    {% if escrow_no %}<div><strong>Escrow / Order No.:</strong> {{ escrow_no }}</div>{% endif %}
    {% if title_order_no %}<div><strong>Title Order #:</strong> {{ title_order_no }}</div>{% endif %}
    {% if title_company %}<div><strong>Title Company:</strong> {{ title_company }}</div>{% endif %}
    {% if apn %}<div style="margin-top: 6pt;"><strong>APN:</strong> {{ apn }}</div>{% endif %}
  </div>

</div>
