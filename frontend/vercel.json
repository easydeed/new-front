{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",

  "rewrites": [
    {
      "source": "/api/external/(.*)",
      "destination": "http://localhost:8001/$1"
    },
    {
      "source": "/api/(.*)", 
      "destination": "http://localhost:8000/$1"
    }
  ]
} 