# DeedPro Backend Environment Variables

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/deedpro
DB_URL=postgresql://username:password@localhost:5432/deedpro

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Places API (Server-side)
GOOGLE_API_KEY=your_google_places_api_key_here

# SiteX Data API (Property Enrichment)
SITEX_BASE_URL=https://api.bkiconnect.com
SITEX_CLIENT_ID=your_sitex_client_id_here
SITEX_CLIENT_SECRET=your_sitex_client_secret_here
SITEX_FEED_ID=your_sitex_feed_id_here
SITEX_DEBUG=false

# PDFShift API (Professional PDF Generation)
PDFSHIFT_API_KEY=your_pdfshift_api_key_here
PDFSHIFT_TIMEOUT=30
PDF_ENGINE=auto  # Options: auto, pdfshift, weasyprint, chromium

# TitlePoint API
TITLEPOINT_USER_ID=PCTXML01
TITLEPOINT_PASSWORD=AlphaOmega637#

# OpenAI API (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://deedpro-frontend-new.vercel.app

# Property Cache Settings
PROPERTY_CACHE_RETENTION_DAYS=90
MAX_CACHED_PROPERTIES_PER_USER=1000

# AI Suggestion Settings
AI_SUGGESTION_CONFIDENCE_THRESHOLD=0.7
AI_DEBOUNCE_DELAY_MS=1000

# Environment
ENVIRONMENT=production
